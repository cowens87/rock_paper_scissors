<h2> Add a Boba Tea </h2>
<%= form_with url: teahouse_boba_teas_path(@tea), local: true do |f| %>
  <%= f.label :name, 'Name:', required: true %>
  <%= f.text_field :name %>
  <%= f.label :price, 'Price:', required: true %>
  <%= f.text_field :price %>
  <%= f.label :base, 'Base:', required: true %>
  <%= f.text_field :base %>
  <%= f.label :description, 'Description:', required: true %>
  <%= f.text_field :description %>
  <%= f.select(:caffeinated, ['Yes', 'No'], prompt: 'Caffeinated?', required: true) %>
  <%= f.submit 'Submit' %>
<% end %>