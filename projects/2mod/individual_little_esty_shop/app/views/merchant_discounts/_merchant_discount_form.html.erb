<%= form_with model: model, url: url do |form| %>
  <%= form.label :discount_percentage, 'Discount Percentage:' %>
  <%= form.text_field :discount_percentage %>
  <%= form.label :quantity_threshold, 'Quantity Threshold:' %>
  <%= form.text_field :quantity_threshold %>
  <%= form.submit 'Submit' %>
<% end %>