<h2>Start an Application</h2>

<%= form_tag "/applications" do %>
  <%= label_tag :name, 'Name:' %>
  <%= text_field_tag :name,  '', :required => true%><br>
  <%= label_tag :street, 'Street Address:' %>
  <%= text_field_tag :street, '', :required => true%><br>
  <%= label_tag :city, 'City:' %>
  <%= text_field_tag :city, '', :required => true%><br>
  <%= label_tag :state, 'State:' %>
  <%= text_field_tag :state, '', :required => true%><br>
  <%= label_tag :zip, 'Zip:' %>
  <%= text_field_tag :zip, '', :required => true%><br>
  <%= label_tag :description, 'Why are you a good fit?' %>
  <%= text_field_tag :description, '', :required => true%><br>
  
  <%= submit_tag 'Submit' %>
<% end %>